		]]>
	</fx:Script>
	<fx:Declarations>
		<s:HTTPService id="newsChannels"
					   url="http://yannickcuypers.be/connectDB/select_team.php"
					   result="newsChannels_resultHandler(event)"/>
		
	</fx:Declarations>
	<s:List id="newsList" width="100%" height="100%" change="newsList_changeHandler(event)" itemRenderer="views.renderer.TeamRenderer"/>
